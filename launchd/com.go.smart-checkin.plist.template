<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.go.smart-checkin</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{BUN_PATH}}</string>
        <string>run</string>
        <string>src/smart-checkin.ts</string>
    </array>

    <key>WorkingDirectory</key>
    <string>{{PROJECT_ROOT}}</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>{{BUN_DIR}}:{{CLAUDE_DIR}}:/usr/local/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <string>{{HOME}}</string>
        <key>GO_PROJECT_ROOT</key>
        <string>{{PROJECT_ROOT}}</string>
    </dict>

    <!-- StartCalendarInterval survives sleep - fires immediately after wake if time passed -->
    <key>StartCalendarInterval</key>
    <array>
        {{CALENDAR_INTERVALS}}
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>StandardOutPath</key>
    <string>{{PROJECT_ROOT}}/logs/smart-checkin.log</string>

    <key>StandardErrorPath</key>
    <string>{{PROJECT_ROOT}}/logs/smart-checkin.error.log</string>
</dict>
</plist>
